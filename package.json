{
  "name": "facturo",
  "version": "1.0.0",
  "description": "Aplikacija za vođenje knjigu prometa paušalnih obrtnika.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petarally/facturo.git"
  },
  "keywords": [
    "obrtinci",
    "paušalisti",
    "knjiga",
    "prometa",
    "računi"
  ],
  "author": "Petar Prenc",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/petarally/facturo/issues"
  },
  "homepage": "https://github.com/petarally/facturo#readme",
  "build": {
    "asar": true,
    "compression": "maximum",
    "appId": "com.petarally.facturo",
    "productName": "Facturo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/icon.ico",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "exceljs": "^4.4.0",
    "html-pdf-node": "^1.0.8",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2"
  }
}
